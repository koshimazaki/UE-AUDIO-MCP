{
  "name": "ui_sound",
  "description": "Non-spatial UI sound routed to a dedicated UI bus",
  "hierarchy": {
    "actor_mixer": {
      "type": "ActorMixer",
      "name": "UI",
      "parent_path": "\\Actor-Mixer Hierarchy\\Default Work Unit"
    },
    "sound": {
      "type": "Sound",
      "name_template": "UI_{sound_name}",
      "reference": {
        "OutputBus": "{bus_path}"
      }
    }
  },
  "event": {
    "name_template": "Play_UI_{sound_name}",
    "action_type": "Play"
  },
  "defaults": {
    "sound_name": "Click",
    "bus_path": "\\Master-Mixer Hierarchy\\Default Work Unit\\Master Audio Bus",
    "parent_path": "\\Actor-Mixer Hierarchy\\Default Work Unit"
  }
}
