{
  "name": "gunshot",
  "description": "Random-variation gunshot system with pitch randomization",
  "hierarchy": {
    "type": "RandomSequenceContainer",
    "name_template": "Gunshot_{weapon_name}",
    "properties": {
      "RandomOrSequence": 0,
      "NormalOrShuffle": 1
    },
    "children": {
      "type": "Sound",
      "name_template": "{weapon_name}_Shot_{index:02d}",
      "count": "{num_variations}",
      "properties": {
        "Pitch": 0
      }
    }
  },
  "event": {
    "name_template": "Play_Gunshot_{weapon_name}",
    "action_type": "Play"
  },
  "defaults": {
    "weapon_name": "Rifle",
    "num_variations": 3,
    "pitch_randomization": 100,
    "parent_path": "\\Actor-Mixer Hierarchy\\Default Work Unit"
  }
}
