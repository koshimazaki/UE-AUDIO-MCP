{
  "name": "weather_states",
  "description": "State-driven weather ambient system with per-state sounds",
  "state_group": {
    "type": "StateGroup",
    "name": "Weather",
    "parent_path": "\\States\\Default Work Unit",
    "values": "{weather_states}"
  },
  "hierarchy": {
    "type": "SwitchContainer",
    "name": "Ambience_Weather",
    "reference": {
      "SwitchGroupOrStateGroup": "Weather"
    },
    "children_per_state": {
      "type": "Sound",
      "name_template": "Weather_{state}",
      "properties": {
        "IsLoopingEnabled": true,
        "IsLoopingInfinite": true
      }
    }
  },
  "event": {
    "name_template": "Play_Weather_Ambience",
    "action_type": "Play"
  },
  "defaults": {
    "weather_states": ["Clear", "Cloudy", "LightRain", "HeavyRain", "Storm", "Snow"],
    "parent_path": "\\Actor-Mixer Hierarchy\\Default Work Unit"
  }
}
