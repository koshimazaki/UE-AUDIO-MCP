{
  "name": "Gunshot",
  "asset_type": "Source",
  "description": "Weapon fire with sample randomization, pitch variation, and ADSR amplitude shaping.",
  "interfaces": [
    "UE.Source.OneShot"
  ],
  "inputs": [
    {
      "name": "OnPlay",
      "type": "Trigger"
    },
    {
      "name": "Shots",
      "type": "WaveAsset[]"
    }
  ],
  "outputs": [
    {
      "name": "Out Mono",
      "type": "Audio"
    },
    {
      "name": "Out Stereo L",
      "type": "Audio"
    },
    {
      "name": "Out Stereo R",
      "type": "Audio"
    },
    {
      "name": "OnFinished",
      "type": "Trigger"
    }
  ],
  "nodes": [
    {
      "id": "random_get",
      "node_type": "Random Get (WaveAssetArray)",
      "position": [
        0,
        0
      ],
      "defaults": {
        "No Repeats": 1
      }
    },
    {
      "id": "random_pitch",
      "node_type": "Random Float",
      "position": [
        0,
        200
      ],
      "defaults": {
        "Min": -1.0,
        "Max": 1.5
      }
    },
    {
      "id": "wave_player",
      "node_type": "Wave Player (Mono)",
      "position": [
        400,
        0
      ],
      "defaults": {
        "Loop": false
      }
    },
    {
      "id": "adsr",
      "node_type": "ADSR Envelope (Audio)",
      "position": [
        400,
        200
      ],
      "defaults": {
        "Attack Time": 0.001,
        "Decay Time": 0.05,
        "Sustain Level": 0.3,
        "Release Time": 0.15
      }
    },
    {
      "id": "amp_multiply",
      "node_type": "Multiply (Audio)",
      "position": [
        800,
        0
      ]
    }
  ],
  "connections": [
    {
      "from_node": "__graph__",
      "from_pin": "OnPlay",
      "to_node": "random_get",
      "to_pin": "Next"
    },
    {
      "from_node": "__graph__",
      "from_pin": "OnPlay",
      "to_node": "random_pitch",
      "to_pin": "Next"
    },
    {
      "from_node": "__graph__",
      "from_pin": "Shots",
      "to_node": "random_get",
      "to_pin": "In Array"
    },
    {
      "from_node": "random_get",
      "from_pin": "Value",
      "to_node": "wave_player",
      "to_pin": "Wave Asset"
    },
    {
      "from_node": "random_get",
      "from_pin": "On Next",
      "to_node": "wave_player",
      "to_pin": "Play"
    },
    {
      "from_node": "random_pitch",
      "from_pin": "Value",
      "to_node": "wave_player",
      "to_pin": "Pitch Shift"
    },
    {
      "from_node": "random_get",
      "from_pin": "On Next",
      "to_node": "adsr",
      "to_pin": "Trigger Attack"
    },
    {
      "from_node": "wave_player",
      "from_pin": "Out Mono",
      "to_node": "amp_multiply",
      "to_pin": "PrimaryOperand"
    },
    {
      "from_node": "adsr",
      "from_pin": "Out Envelope",
      "to_node": "amp_multiply",
      "to_pin": "AdditionalOperands"
    },
    {
      "from_node": "amp_multiply",
      "from_pin": "Out",
      "to_node": "__graph__",
      "to_pin": "Out Mono"
    },
    {
      "from_node": "amp_multiply",
      "from_pin": "Out",
      "to_node": "__graph__",
      "to_pin": "Out Stereo L"
    },
    {
      "from_node": "amp_multiply",
      "from_pin": "Out",
      "to_node": "__graph__",
      "to_pin": "Out Stereo R"
    },
    {
      "from_node": "adsr",
      "from_pin": "On Done",
      "to_node": "__graph__",
      "to_pin": "OnFinished"
    }
  ]
}
