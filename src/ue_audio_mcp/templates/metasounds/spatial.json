{
  "name": "Spatial",
  "asset_type": "Source",
  "description": "3D spatial audio with ITD panning for binaural headphone rendering.",
  "interfaces": [
    "UE.Source.OneShot"
  ],
  "inputs": [
    {
      "name": "OnPlay",
      "type": "Trigger"
    },
    {
      "name": "Azimuth",
      "type": "Float"
    },
    {
      "name": "Sound",
      "type": "WaveAsset"
    }
  ],
  "outputs": [
    {
      "name": "Out Mono",
      "type": "Audio"
    },
    {
      "name": "Out Stereo L",
      "type": "Audio"
    },
    {
      "name": "Out Stereo R",
      "type": "Audio"
    },
    {
      "name": "OnFinished",
      "type": "Trigger"
    }
  ],
  "nodes": [
    {
      "id": "wave_player",
      "node_type": "Wave Player (Mono)",
      "position": [
        0,
        0
      ],
      "defaults": {
        "Loop": false
      }
    },
    {
      "id": "itd_panner",
      "node_type": "ITD Panner",
      "position": [
        400,
        0
      ],
      "defaults": {
        "Distance Factor": 1.0
      }
    }
  ],
  "connections": [
    {
      "from_node": "__graph__",
      "from_pin": "OnPlay",
      "to_node": "wave_player",
      "to_pin": "Play"
    },
    {
      "from_node": "__graph__",
      "from_pin": "Sound",
      "to_node": "wave_player",
      "to_pin": "Wave Asset"
    },
    {
      "from_node": "wave_player",
      "from_pin": "Audio",
      "to_node": "itd_panner",
      "to_pin": "In"
    },
    {
      "from_node": "__graph__",
      "from_pin": "Azimuth",
      "to_node": "itd_panner",
      "to_pin": "Angle"
    },
    {
      "from_node": "wave_player",
      "from_pin": "Audio",
      "to_node": "__graph__",
      "to_pin": "Out Mono"
    },
    {
      "from_node": "itd_panner",
      "from_pin": "Out Left",
      "to_node": "__graph__",
      "to_pin": "Out Stereo L"
    },
    {
      "from_node": "itd_panner",
      "from_pin": "Out Right",
      "to_node": "__graph__",
      "to_pin": "Out Stereo R"
    },
    {
      "from_node": "wave_player",
      "from_pin": "On Finished",
      "to_node": "__graph__",
      "to_pin": "OnFinished"
    }
  ]
}
