      "node_type": "Wave Player (Stereo)",
      "position": [
        200,
        0
      ],
      "defaults": {
        "Wave Asset": "<Forest_Day_Base>",
        "Loop": true,
        "Start Time": 0.0,
        "Pitch Shift": 0.0,
        "Loop Start": 0.0,
        "Loop Duration": -1.0
      },
      "comment": "Base ambient layer — always playing"
    },
    {
      "id": "wp_birds",
      "node_type": "Wave Player (Stereo)",
      "position": [
        200,
        250
      ],
      "defaults": {
        "Wave Asset": "<Birds>",
        "Loop": true
      },
      "comment": "Birds layer — starts silent, faded in by trigger"
    },
    {
