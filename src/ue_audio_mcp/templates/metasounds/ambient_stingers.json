    },
    {
      "id": "route_birds",
      "node_type": "Trigger Route (Float, 2)",
      "position": [
        200,
        750
      ],
      "defaults": {
        "Value 0": 0.0,
        "Value 1": 5.0
      },
      "comment": "Set 0 = fade out (0.0), Set 1 = fade in (5.0)"
    },
    {
      "id": "interp_birds",
      "node_type": "InterpTo",
      "position": [
        500,
        750
      ],
      "defaults": {
        "Interp Time": 3.0
      },
      "comment": "Smooth 3-second crossfade for birds gain"
    },
    {
      "id": "route_bugs",
      "node_type": "Trigger Route (Float, 2)",
      "position": [
        200,
        900
      ],
      "defaults": {
        "Value 0": 0.0,
        "Value 1": 5.0
      },
      "comment": "Set 0 = fade out (0.0), Set 1 = fade in (5.0)"
    },
    {
      "id": "interp_bugs",
