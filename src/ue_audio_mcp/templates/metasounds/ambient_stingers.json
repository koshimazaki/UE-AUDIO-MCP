      "position": [
        500,
        900
      ],
      "defaults": {
        "Interp Time": 3.0
      },
      "comment": "Smooth 3-second crossfade for bugs gain"
    },
    {
      "id": "stereo_mixer",
      "node_type": "Audio Mixer (Stereo, 3)",
      "position": [
        800,
        300
      ],
      "defaults": {
        "Gain 0": 0.5,
        "Gain 1": 0.0,
        "Gain 2": 0.0
      },
      "comment": "3-input stereo mixer. Gain 0 = base (fixed 0.5), Gain 1/2 = driven by InterpTo"
    }
