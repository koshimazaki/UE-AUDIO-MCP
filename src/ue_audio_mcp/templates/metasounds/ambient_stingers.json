{
  "name": "Ambient Stingers",
  "asset_type": "Source",
  "description": "Multi-layer ambient system with trigger-box crossfades. Base ambient loop always plays at half volume. Additional layers (birds, bugs) loop silently until triggered, then smoothly fade in via InterpTo over 3 seconds. Trigger Route selects between gain 0 (off) and gain target (on).",
  "author": "Epic Games Community",
  "source_url": "https://dev.epicgames.com/community/learning/tutorials/ambient-sounds-metasound",
  "interfaces": [
    "UE.Source.Default"
  ],
  "inputs": [
    {
      "name": "OnPlay",
      "type": "Trigger"
    },
    {
      "name": "Birds",
      "type": "Trigger",
      "description": "Fired by trigger box overlap to fade in birds layer"
    },
    {
      "name": "Bugs",
      "type": "Trigger",
      "description": "Fired by trigger box overlap to fade in bugs/insects layer"
    }
  ],
  "outputs": [
    {
      "name": "Left Audio",
      "type": "Audio"
    },
    {
      "name": "Right Audio",
      "type": "Audio"
    },
    {
      "name": "OnFinished",
      "type": "Trigger"
    },
    {
